@{
    ViewData["Title"] = "View";
}

@model List<EventsApp.Models.Event>

<h1>События</h1>
<div class="row">
    @foreach (var eventApp in @Model)
    {
    <div class="border row col-12 p-3">
        <div class="col-3">
            <a asp-controller="Event" asp-action="Details" asp-route-id=@eventApp.Id>@eventApp.Name</a>
        </div>
        <div class="col-3">
            <span>@eventApp.Time.ToString("dd.MM.yyyy hh:mm")</span>
        </div>
        <div class="col-6">@eventApp.Description</div>
    </div> 
    }
</div>

    


