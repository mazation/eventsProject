@model EventsApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<form asp-controller="Home" asp-action="Register" method="post">
    <div class="form-group row">
        <label for="username">Имя пользователя</label>
        <input type="text" class="form-control" id="username" name="username" />
    </div>
    <div class="form-group">
        <label for="email">Эмейл</label>
        <input type="email" class="form-control" id="email" name="email" />
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <span>Пароль от 8 символов, обязательно использование цифр, прописных и строчных букв, а также спец.символов</span>
        <input type="password" class="form-control" id="password" name="password" />
    </div>

    <button type="submit" class="btn btn-primary">Регистрация</button>
</form>
<div class="col-3"></div>
<div class="col-3">
    @if (@TempData["ErrorMessage"] != null)
    {
        <p>@TempData["ErrorMessage"]</p>
    }

</div>
<div class="col-3"></div>
